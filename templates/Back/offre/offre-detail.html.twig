{% extends "base-back.html.twig"%}
{% block title %}Dashboard Offres et Partenarias {% endblock %}
 {% block body %}
  <main id="main" class="main">

    <div class="pagetitle">
      <h1>Offres</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="index.html">Home</a></li>
          <li class="breadcrumb-item active">Offres</li>
        </ol>
      </nav>
    </div><!-- End Page Title -->

    <section class="section dashboard">
    <style>
        .details-container {
            max-width: 600px;
            margin: 0 auto;
        }

        .details-table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

        .details-table th,
        .details-table td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        .details-table th {
            background-color: #f2f2f2;
        }

        .back-to-list-btn,
        .edit-btn,
        .delete-form {
            padding: 8px 12px;
            text-decoration: none;
            border-radius: 5px;
            margin-right: 10px;
        }

        .back-to-list-btn {
            background-color: #007bff; 
            color: white;
        }

        .edit-btn {
            background-color: green;
            color: white;
        }

        .delete-btn {
            background-color: red;
            color: white;
        }

        

        .picture-viewer {
            max-width: 100%;
            height: auto;
            margin-bottom: 20px;
        }
    </style>

    <div class="details-container">
        <table class="details-table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ offre.id }}</td>
                </tr>
                <tr>
                    <th>NomOffre</th>
                    <td>{{ offre.NomOffre }}</td>
                </tr>
                <tr>
                    <th>DescriptionOffre</th>
                    <td>{{ offre.DescriptionOffre }}</td>
                </tr>
                <tr>
                    <th>DateExp</th>
                    <td>{{ offre.DateExp ? offre.DateExp|date('Y-m-d') : '' }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('app_off_index') }}" class="back-to-list-btn">Back to List</a>
        <a href="{{ path('app_off_edit', {'id': offre.id}) }}" class="edit-btn">Edit</a>
       <form class="delete-form" method="post" action="{{ path('app_off_delete', {'id': offre.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ offre.id) }}">
    <button class="delete-btn">Delete</button>
</form>
        

        
    </div>
</section>




{% endblock %}
