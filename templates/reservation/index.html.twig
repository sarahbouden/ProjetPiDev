{% extends 'base-back.html.twig' %}

{% block title %}Reservation des hotels{% endblock %}

{% block body %}
<main id="main" class="main" >
    <h1>Reservation des hotels</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date Debut Reservation</th>
                <th>Date Fin Reservation</th>
                <th>Nombre De Personnes</th>
                <th>Type Room</th>
                <th>Id Client</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reservation in reservations %}
            <tr>
                <td>{{ reservation.id }}</td>
                <td>{{ reservation.DateDebutR ? reservation.DateDebutR|date('Y-m-d') : '' }}</td>
                <td>{{ reservation.DateFinR ? reservation.DateFinR|date('Y-m-d') : '' }}</td>
                <td>{{ reservation.NbrPerso }}</td>
                <td>{{ reservation.TypeRoom }}</td>
                <td>{{ reservation.IdClent }}</td>
                <td>
                    <a href="{{ path('app_reservation_show', {'id': reservation.id}) }}">show</a>
                    <a href="{{ path('app_reservation_edit', {'id': reservation.id}) }}">edit</a>
                    
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

</main>
{% endblock %}
