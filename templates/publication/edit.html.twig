{% extends 'base-front.html.twig' %}

{% block title %}Edit Publication{% endblock %}

{% block body %}
    <h1>Edit Publication</h1>

    <div class="form-group">
        {{ form_label(form.UrlRessource, 'Photo', {'label_attr': {'class': 'control-label'}}) }}
        {{ form_widget(form.UrlRessource, {'attr': {'class': 'form-control'}}) }}
        {% if form_errors(form.UrlRessource) is not empty %}
            <small class="form-text text-muted">{{ form_errors(form.UrlRessource) }}</small>
        {% endif %}
    </div>

    {{ include('publication/_form.html.twig', {'button_label': 'Update'}) }}

    <a href="{{ path('app_publication_index') }}">back to list</a>

    {{ include('publication/_delete_form.html.twig') }}
{% endblock %}